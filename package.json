{
  "name": "water_widget",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://water-comes-prod.herokuapp.com/",
  "dependencies": {
    "@sentry/browser": "^5.4.0",
    "bootstrap": "^4.3.1",
    "dawa-autocomplete2": "^1.0.0",
    "npm": "^6.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-responsive-modal": "^4.0.1",
    "react-scripts": "3.0.1",
    "react-select": "^2.4.3",
    "reactstrap": "^8.0.0",
    "styled-components": "^4.2.0",
    "uglifyjs-webpack-plugin": "^2.1.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false",
    "coveralls": "cat coverage/lcov.info | node_modules/.bin/coveralls",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.0",
    "webpack-cli": "^3.3.2"
  }
}
